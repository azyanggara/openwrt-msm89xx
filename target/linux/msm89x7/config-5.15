# Kernel Configuration
CONFIG_ARCH_QCOM=y
CONFIG_ARM=y

# WiFi Support (WCNSS)
CONFIG_WCN36XX=y
CONFIG_WLAN=y
CONFIG_CFG80211=y
CONFIG_MAC80211=y
CONFIG_WIRELESS_EXT=y

# LTE Modem Support (Qualcomm QMI)
CONFIG_QCOM_QMI_HELPERS=y
CONFIG_USB_NET_QMI_WWAN=y
CONFIG_USB_WDM=y
CONFIG_USB_SERIAL_OPTION=y
CONFIG_USB_SERIAL_QUALCOMM=y

# USB Support
CONFIG_USB=y
CONFIG_USB_COMMON=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB_HID=y
CONFIG_USB_OHCI_HCD=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_STORAGE=y
CONFIG_USB_USBNET=y
CONFIG_USB_WDM=y

# USB-to-LAN Adapters
CONFIG_USB_NET_AX88179_178A=y
CONFIG_USB_NET_CDCETHER=y
CONFIG_USB_NET_RNDIS_HOST=y
CONFIG_USB_NET_RTL8150=y
CONFIG_USB_NET_RTL8152=y
CONFIG_USB_NET_SMSC75XX=y
CONFIG_USB_NET_SMSC95XX=y

# PPP (for 4G modem support)
CONFIG_PPP=y
CONFIG_PPP_ASYNC=y
CONFIG_PPP_SYNC_TTY=y

# MMC/SDHCI (for WiFi via SDIO)
CONFIG_MMC_SDHCI_MSM=y

# USB Gadget Support
CONFIG_USB_GADGET=y
CONFIG_USB_GADGET_DUALSPEED=y
CONFIG_USB_GADGET_ECM=y
CONFIG_USB_GADGET_RNDIS=y

# Serial HS DMA (for modem communication)
CONFIG_SERIAL_MSM_HS_DMA=y
